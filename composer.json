{
    "name": "alphaolomi/laravel-azampay",
    "description": "Laravel Azampay",
    "keywords": [
        "alphaolomi",
        "laravel",
        "laravel-azampay"
    ],
    "homepage": "https://github.com/alphaolomi/laravel-azampay",
    "license": "MIT",
    "authors": [
        {
            "name": "Alpha Olomi",
            "email": "alphaolomi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^6.3.1|^7.0",
        "illuminate/contracts": "^7.0|^8.0|^9.0|^10.0",
        "spatie/laravel-package-tools": "^1.12"
    },
    "require-dev": {
        "nunomaduro/collision": "^4.1|^6.0",
        "nunomaduro/larastan": "^1.0|^2.4",
        "orchestra/testbench": "^6.0|^7.0",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^8.5|^9.5",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Alphaolomi\\Azampay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alphaolomi\\Azampay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alphaolomi\\Azampay\\AzampayServiceProvider"
            ],
            "aliases": {
                "Azampay": "Alphaolomi\\Azampay\\Facades\\Azampay"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
